<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fashionmanager.kim.develop.mapper.ReviewCategoryMapper">
    <resultMap id="reviewCategoryMap" type="fashionmanager.kim.develop.dto.ReviewCategoryDTO">
        <id property="reviewCategoryNum" column="NUM"/>
        <result property="reviewCategoryName" column="NAME"/>
    </resultMap>

    <select id="selectAllReviewCategories" resultMap="reviewCategoryMap">
        SELECT
               A.NUM
             , A.NAME
        FROM REVIEW_CATEGORY A
    </select>
</mapper>